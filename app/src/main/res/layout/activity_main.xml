<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jayfeng.lesscode.headerbar.app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jayfeng.lesscode.headerbar.HeaderBar
            android:id="@+id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jayfeng.lesscode.headerbar.HeaderBar
            android:id="@+id/headerbar_shadow_none"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jayfeng.lesscode.headerbar.HeaderBar
            android:id="@+id/headerbar_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:headerbar_shadow="#f00"
            app:headerbar_shadow_height="1px"
            app:headerbar_background="#3498db"/>

        <com.jayfeng.lesscode.headerbar.HeaderBar
            android:id="@+id/headerbar_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerbar_background="#9b59b6"/>

        <com.jayfeng.lesscode.headerbar.HeaderBar
            android:id="@+id/headerbar_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerbar_background="#e67e22"/>


        <com.jayfeng.lesscode.headerbar.HeaderBar
            android:id="@+id/headerbar_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerbar_background="#c0392b"/>
    </LinearLayout>

</RelativeLayout>
